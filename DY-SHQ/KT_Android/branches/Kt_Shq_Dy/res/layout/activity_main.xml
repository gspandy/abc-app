<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" 
        >

        <LinearLayout
            android:id="@+id/ll_life"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_fragment_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/im_new_home" />

            <TextView
                android:id="@+id/tv_life_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/theme_color"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="首页" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_seller"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_fragment_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/tabbar_life" />
            
             <TextView
                 android:id="@+id/tv_seller_word"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:text="生活服务"
                 android:textColor="@color/typeface_color"
                 android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_convenient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_frgment_convenient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/tabbar_service" />
            
             <TextView
                 android:id="@+id/tv_convenient_word"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="银行资讯"
                 android:textColor="@color/typeface_color"
                 android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_fragment_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/tabbar_circle" />
            
             <TextView
                android:id="@+id/tv_circle_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/typeface_color"
                 android:textSize="12sp"
                android:layout_gravity="center"
                android:text="我的圈子" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:background="#999999" />

    <LinearLayout
        android:id="@+id/ll_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/view"
        android:orientation="vertical" 
        android:background="@color/background_color">

    </LinearLayout>

</RelativeLayout>