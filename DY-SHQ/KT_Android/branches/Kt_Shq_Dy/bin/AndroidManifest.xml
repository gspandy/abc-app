            >
        </activity>
        <activity 
            android:name="com.kt.Activity.LoginActivity"
            android:configChanges="orientation|keyboardHidden"
            >
        </activity>
        <activity 
            android:name="com.kt.Activity.RegisteredActivity"
            android:configChanges="orientation|keyboardHidden"
            >
